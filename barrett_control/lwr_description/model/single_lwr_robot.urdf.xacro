<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="single_lwr_robot">

	<!-- Include all models -->
	<xacro:include filename="$(find lwr_description)/model/kuka_lwr.urdf.xacro"/>

	<!-- and assemble your robot -->
	<link name="box1">
		<visual>
			<origin xyz="0 0 0.50" rpy="0 0 0"/>
			<geometry>
				<box size="1.0 1.0 1.0"/>
			</geometry>
		</visual>
		<collision>
			<origin xyz="0 0 0.50" rpy="0 0 0"/>
			<geometry>
				<box size="1.0 1.0 1.0"/>
			</geometry>
		</collision>
	</link>

        

	<gazebo reference="box">
		<static>true</static>>
	</gazebo>

        <link name="rack1">
    		<visual>
      			<geometry>
        			<box size="0.5 0.5 0.5"/>
      			</geometry>
    		</visual>

    		<inertial>
        		<origin xyz="0 0 0" />
        		<mass value="1" />
        		<inertia
          			ixx="0.1" ixy="0"   ixz="0"
                  			  iyy="0.1"   iyz="0"
                            			      izz="0.1" />
    		</inertial>
  	</link>

        <joint name="box_to_rack1" type="fixed">
    		<parent link="box1"/>
    		<child link="rack1"/>
    		<origin xyz="0 0 0"/>
  	</joint>

	<!-- using the models -->
	<xacro:kuka_lwr parent="rack1" name="lwr">
		<origin xyz="0 0 1" rpy="0 0 0"/>
	</xacro:kuka_lwr>

</robot>

