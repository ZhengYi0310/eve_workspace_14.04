<launch>
  <!-- Launch several pieces of barrett hardware -->
  <arg name="CONFIG_LEFT" default="/etc/barrett/default.conf"/>
  <arg name="BUS_LEFT" default="/etc/barrett/default.conf"/>

  <!-- Config / Bus -->
  <param name="barrett/busses/rtcan_left/config" value="$(arg CONFIG_LEFT)"/>
  <param name="barrett/busses/rtcan_left/bus" value="$(arg BUS_LEFT)"/>

  <!-- Realtime parameter -->
  <param name="barrett/verbose" value="true"/>
  <param name="barrett/period" value="0.004" type="double"/>

  <!-- Products -->
  <rosparam ns="barrett">
    urdf_file_path: /home/robot/yzheng_ws/src/barrett_control/barrett_model/robots/wam7_bhand.urdf
    product_names:
    -  "wam_left"
    - "bhand_left"
    products:
      wam_left:
        bus: "rtcan_left"
        type: "wam"
        tip_joint: "left_wam/palm_yaw_joint"
        tip_segment: "left_wam/wrist_palm_link"
        root_segment: "left_wam/base_link"
      bhand_left:
        bus: "rtcan_left"
        type: "hand"
        tactile: false
  </rosparam>

  <!-- Launch several pieces of barrett hardware -->

  

  <!-- WAM Parameters -->
  <include ns="barrett" file="$(find barrett_model)/launch/xacrodisplay.launch"/>
  
  <arg name="rvizconfig" default="$(find barrett_model)/urdf.rviz" /> 
  <!-- <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher"> -->
  <!--   <param name="/use_gui" value="true"/> --> 
  <!--   <rosparam param="/source_list">["/joint_states"]</rosparam> --> 
  <!--   <remap from="joint_states" to="JSP/joint_states" /> --> 
  <!--   <remap from="robot_description" to="barrett/robot_description_yi" /> -->
  <!-- </node> --> 
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher"> 
     <remap from="robot_description" to="barrett/robot_description_yi" /> 
  </node> 
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" required="true"> 
     <remap from="robot_description" to="barrett/robot_description_yi" /> 
  </node> 

  <param name="barrett/can_dev_name" value="rtcan0"/>

  #<rosparam ns="barrett" file="$(find wam_dmp_controller)/config/wam_joint_position_gains.yaml" command="load"/>
  

  <!-- WAM Server -->
  <node pkg="barrett_hw" type="wam_server" name="wam_server" output="screen"/> 

  <rosparam ns="barrett">
    joint_state_controller:
      type: joint_state_controller/JointStateController
      publish_rate: 50
    robot_states_publisher:
      type: barrett_hw/RobotStatesPublisher
      publish_rate: 50
      tactile: false
    #left_wam/base_yaw_joint:
    #  type: wam_dmp_controller/JointPositionController

  </rosparam>

  <node name="default_controller_spawner"
    pkg="controller_manager" type="spawner" output="screen"
    args="barrett/joint_state_controller barrett/robot_states_publisher"/>


</launch>
